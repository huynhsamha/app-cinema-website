<% layout('../share/layout') -%>


    <link rel="stylesheet" href="/stylesheets/film/create.css">
    <link rel="stylesheet" href="/stylesheets/film/detail.css">
    <script src="/javascripts/film/detail.js"></script>

    <div class="container my-detail-film" ng-controller="detailController" ng-show="complete" id="detail-film">

        <div class="container my-container-center my-title-header animated flipInX" ng-cloak>
            <h1> {{name}} </h1>
        </div>

        <div class="container col-sm-12 col-md-5 my-detail-image text-center">
            <a ng-href="{{url}}">
                <img ng-src="{{url}}">
            </a>
        </div>

        <div class="container col-sm-12 col-md-7 my-form-film animated flipInX" ng-cloak>
            <h4> {{genre}} </h4>
            <h4> {{time}} </h4>
            <h4> {{noi_dung_mo_ta}} </h4>
            <p> {{content}} </p>
        </div>

        <div class="container my-container-center my-bot-form">
            <button type="submit " class="btn btn-primary my-btn text-center animated slideInUp" onclick="javascript:window.history.back()" style="display:none" id="btnReturn">
                <i class="fa fa-undo fa-lg" aria-hidden="true"></i>
                    Quay trở về
            </button>
        </div>

        <span id="key-film" style="display:none"><%= key %></span>
    </div>