<% layout('../share/layout') -%>


    <link rel="stylesheet" href="/stylesheets/film/create.css">
    <link rel="stylesheet" href="/stylesheets/film/detail.css">
    <script src="/javascripts/film/detail.js"></script>

    <div class="container my-detail-film" ng-controller="detailController" ng-show="completeLoading" id="detail-film">

        <div class="container my-container-center my-title-header animated flipInX" ng-cloak>
            <h1 class="title-name-film"> {{name}} </h1>
        </div>

        <div class="container col-sm-12 col-md-5 my-detail-image text-center">
            <a href="#" data-toggle="modal" data-target="#modalImage">
                <img ng-src="{{url}}">
            </a>
        </div>

        <div class="container col-sm-12 col-md-7 animated flipInX" ng-cloak>
            <h4> Thể loại: &nbsp; {{genre}} </h4>
            <h4> Thời điểm phát hành: &nbsp; {{time}} </h4>
            <h4> Nội dung mô tả: </h4>
            <p> {{content}} </p>
        </div>

        <div class="container my-container-center my-bot-form">
            <button type="submit " class="btn btn-primary my-btn text-center animated slideInUp" onclick="javascript:window.location.href='/'" style="display:none" id="btnReturn">
                <i class="fa fa-arrow-circle-left fa-lg" aria-hidden="true"></i>
                    Quay trở về
            </button>
        </div>


        <!-- GET KEY FILM in .JS -->
        <span id="key-film" style="display:none"><%= key %></span>



        <!-- Modal Show Image  -->
        <div class="modal fade animated zoomIn my-modal-image" id="modalImage" tabindex="-1" aria-hidden="true">
            <div class="text-center" style="margin: 50px">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa fa-close fa-2x" aria-hidden="true" style="color:white"></i>
                </button>
            </div>
            <img ng-src="{{url}}">
        </div>

    </div>